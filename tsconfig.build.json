{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "rootDir": "src",
    "outDir": "package/mobile/lib",
    "declaration": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["**/demo/*.ts", "**/demo/*.tsx", "**/_doc/*", "src/app.config.ts", "src/app.ts"],
  "compileOnSave": false
}
